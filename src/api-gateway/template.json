{
  "Parameters": {
    "ApiName": {
      "Type": "String",
      "Description": "The name of the API"
    },
    "ApiDescription": {
      "Type": "String",
      "Description": "The description of the API"
    },
    "ApiSpecBucket": {
      "Type": "String",
      "Description": "The bucket name which holds the OpenApi Specification"
    },
    "ApiSpecKey": {
      "Type": "String",
      "Description": "The object key for the OpenApi Specification"
    }
  },
  "Resources": {
    "API": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Name": { "Ref": "ApiName" },
        "Description": { "Ref": "ApiDescription" },
        "BodyS3Location": {
          "Bucket": { "Ref": "ApiSpecBucket" },
          "Key": { "Ref": "ApiSpecKey" }
        }
      }
    }
  }
}